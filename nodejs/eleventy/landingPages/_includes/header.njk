<header class="head">
    <div class="user-info">
        <div class="c-img">
            <div class="img">
                <img src="./assets/artista-1.png">
            </div>

            <div class="nome-user">

                {% if config.nome and config.nome != "" %}
                    <h1>{{ config.nome }}</h1>
                {% else %}
                    <p>Nenhum nome</p>
                {% endif %}

            </div>
        </div>

        <div class="info-rede">
            <div class="bio">
                <h2>Bio</h2>

                    {% if config.bio and config.bio != "" %}
                        <p>{{ config.bio }}</p>
                    {% else %}
                        <p>Nenhum bio</p>    
                    {% endif %}

            </div>
        </div>
    </div>

    <div class="skills-user">
        <h2>Tecnologias</h2>

        <ul id="skills-tech-id" class="skill">

            {% for lang in config.skillsTech %}
                <li class="item-skills">
                    <p>{{ lang }}</p>
                </li>
            {% endfor %}
            
        </ul>
    </div>
</header>